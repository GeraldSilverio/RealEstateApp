@using RealEstateApp.Core.Application.ViewModel.Improvement;
@model SaveImprovementViewModel
@{
    ViewData["Title"] = "Eliminar tipo de mejora";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="bg-blue-card-header p-2 text-white bg-opacity-75 m-md-1 fw-bolder">
                    <h4>¿Está seguro de que desea eliminar esta mejora?</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Improvement" asp-action="Delete">

                        <input type="hidden" asp-for="Id" name="id" />

                        <a asp-controller="Improvement" asp-action="Index" class="btn btn-sm btn-secondary p-2 text-white bg-opacity-75 m-md-1 fw-bolder">Cancelar</a>
                        <button type="submit" class="btn btn-primary text-white bg-opacity-75 m-md-1 fw-bolder">Confirmar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .bg-blue-card-header {
        background-color: #FFAB27;
        color: white;
    }

    .card {
        border: 0.2px solid #FFAB27;
        border-radius: 4px 4px 10px 10px;
        box-shadow: 8px 8px 16px #5A5A5A;
    }

</style>