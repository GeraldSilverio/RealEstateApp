@using RealEstateApp.Core.Application.ViewModel.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Desactivar usuario";
    bool isActive = Model.IsActive == true ? true : false;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="bg-blue-card-header p-2 text-white bg-opacity-75 m-md-1 fw-bolder">
                    <h4>@(isActive ? "¿Está seguro de que desea desactivar este usuario?" : "¿Está seguro de que desea activar este usuario?")</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Agent" asp-action="ActiveOrDesactive">

                        <input type="hidden" asp-for="Id" name="id" />

                        <input type="hidden" asp-for="IsActive" value="@(isActive? false : true)" />
                        <a asp-controller="Admin" asp-action="AgentList" class="btn btn-sm btn-secondary p-2 text-white bg-opacity-75 m-md-1 fw-bolder">Cancelar</a>
                        <button type="submit" class="btn btn-primary text-white bg-opacity-75 m-md-1 fw-bolder">Confirmar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .bg-blue-card-header {
        background-color: #cf671b;
       color: white;
    }

    .card {
        border: 0.2px solid #cf671b;
        border-radius: 4px 4px 10px 10px;
        box-shadow: 8px 8px 16px #5A5A5A;
    }

</style>