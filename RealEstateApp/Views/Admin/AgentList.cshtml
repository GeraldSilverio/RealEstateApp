@using RealEstateApp.Core.Application.Dtos.Accounts;
@using RealEstateApp.Core.Application.ViewModel.User;
@using RealEstateApp.Core.Application.Helpers;
@inject IHttpContextAccessor httpContextAccessor
@model List<UserViewModel>
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    ViewData["Title"] = "Usuarios";
}


<div class="container">
    <div class="col-8 offset-2 mt-5">
        <div class="card">
            <div class="card-header bg-color">
                <h3 class="card-title text-light text-center">LISTADO DE AGENTES</h3>
            </div>

            <div class="card-body">

                @if (Model.Count == 0 || Model == null)
                {
                    <h4 class="text-secondary fw-bolder">No hay agentes registrados en este momento.</h4>
                }
                else
                {
                    <table class="table bg-white table-responsive">
                        <thead class="text-white bg-color">
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Propiedades</th>
                                <th>Correo</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td></td>
                                        <td>@item.Email</td>
                                        <td>@(item.IsActive ? "Activo" : "Inactivo")</td>
                                        <td>
                                            <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteAgent" asp-route-id="@item.Id">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                
            </div>
        </div>
    </div>
</div>

<script>
    var dropdownTrigger = document.querySelector('.btn-link');
    var myDropdown = new bootstrap.Dropdown(dropdownTrigger);
</script>

<style>
    .bg-color {
        background-color: #FFAB27;
    }
</style>
